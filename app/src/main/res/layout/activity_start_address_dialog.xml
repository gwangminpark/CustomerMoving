<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="380dp"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="11dp"
                android:text="출발지 주소"
                android:textColor="#00aCe9"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginStart="89dp"
                android:layout_marginTop="8dp"
                android:text="출발지 주소를 선택해주세요" />

            <TextView
                android:visibility="gone"
                android:id="@+id/address_tittle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:textAlignment="center"
                android:text="" />

        </RelativeLayout>

        <LinearLayout

            android:layout_width="390dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:visibility="gone"
                android:id="@+id/tittle1"
                android:layout_width="50dp"
                android:layout_height="40dp"


                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:background="@color/title_blue"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tittle2"
                android:layout_width="90dp"
                android:layout_height="40dp"


                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tittle1"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tittle3"
                android:layout_width="80dp"
                android:layout_height="40dp"

                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tittle2"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewAddress"
            android:layout_width="330dp"
            android:layout_height="300dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/cancelButton"
                android:layout_width="315dp"
                android:layout_height="50dp"

                    android:layout_marginLeft="5dp"
                android:background="#656b71"
                android:gravity="center"
                android:text="닫기"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />




            <Button
                android:visibility="gone"
                android:id="@+id/okButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="이전단계"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:background="#00a0e9"/>
        </LinearLayout>

    </LinearLayout>
</layout>